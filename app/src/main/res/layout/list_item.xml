<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".All_alarm"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/list_item_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ararm_clock_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is row number 15"
        android:id="@+id/list_item_text"
        android:layout_toEndOf="@+id/list_item_thumbnail" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="60dp"
        android:text="Set"
        android:layout_marginLeft="218dp"
        android:id="@+id/list_item_set"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="78dp"
        android:text="Cancel"
        android:layout_alignParentRight="true"
        android:id="@+id/list_item_cancel"/>


</RelativeLayout>